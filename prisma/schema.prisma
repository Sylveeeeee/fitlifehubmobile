generator client {
  provider = "prisma-client-js"
  output   = "../backend/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  name          String?
  passwordHash  String
  birthday      DateTime?   
  sex           String?     
  height        Float?     
  weight        Float? 
  caloriesGoal  Int?
  proteinGoal   Float?   
  fatGoal       Float?   
  carbsGoal     Float?   
  fiberGoal     Float?   
  createdAt     DateTime @default(now())
  foodEntries   FoodEntry[]
}

model FoodEntry {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  calories  Int
  protein   Float    
  fat       Float    
  carbs     Float    
  fiber     Float?   
  date      DateTime
  createdAt DateTime @default(now())
}

model Food {
  id        Int      @id @default(autoincrement())
  name      String
  calories  Int
  protein   Float
  fat       Float
  carbs     Float
  fiber     Float?
  createdAt DateTime @default(now())
}